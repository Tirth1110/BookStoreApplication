@model BookStore.Models.ResetPasswordModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card my-5">
        <div class="card-header bg-gradient">
            <h4 class="text-success">Reset Your Password  😂</h4>
        </div>
        <div class="card-body">
            <hr />
            <div class="row">
                <div class="col-md-6 pt-5">
                    @if (Model?.IsSuuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <b>Your Password Updated Successfully... 👌</b>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ResetPassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input type="hidden" asp-for="UserId" class="form-control" />
                                <input type="hidden" asp-for="Token" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Reset Your Password" class="btn btn-outline-success" />
                            </div>
                            <div>
                                <a asp-action="singin" asp-controller="Account">Back to Login 😉</a>
                            </div>
                        </form>
                    }
                </div>
                <div class="col-md-6 pt-5">
                    <embed src="~/Images/svg/ResetPassword.svg" />
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
